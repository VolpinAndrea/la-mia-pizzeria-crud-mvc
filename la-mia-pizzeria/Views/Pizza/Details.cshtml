@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">

            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli pizza</h1>
            </div>

            <div class="post-single-image-container">
                <img src="@Model.Immagine" width="200">
            </div>

            <p>
                <strong>Nome:</strong>
                @Model.Nome
            </p>

            <p>
                <strong>Ingredienti:</strong>
                @Model.Descrizione
            </p>

            <p>
                <strong>Prezo:</strong>
                @Model.Prezzo
            </p>

            <p>
                <strong>Categoria:</strong>
                @Model.Categoria.Nome
            </p>
            <div class="text-center">
                <a class="btn btn-primary col-3" href="@Url.Action("Index", "Home" )" role="button">Home</a>
                <a class="btn btn-warning col-3" href="@Url.Action("Update", "Pizza", new { id = Model.Id })" role="button">Modifica</a>
                <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <a class="btn btn-danger col-3" role="button">Elimina</a>
                </form>
            </div>
        </div>
    </div>
</div>

