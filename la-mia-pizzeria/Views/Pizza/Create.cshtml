@model PizzaCategoriaView

<div class="container">

    <form asp-controller="Pizza" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3 form-check">
            <label>Foto:</label>
            <input asp-for="Pizza.Immagine" type="text" class="form-control" />
            <span asp-validation-for="Pizza.Immagine" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <label>Nome:</label>
            <input asp-for="Pizza.Nome" type="text" class="form-control" />
            <span asp-validation-for="Pizza.Nome" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <label>Ingredienti:</label>
            <input asp-for="Pizza.Descrizione" type="text" class="form-control" />
            <span asp-validation-for="Pizza.Descrizione" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <label>Prezzo:</label>
            <input asp-for="Pizza.Prezzo" type="text" class="form-control" />
            <span asp-validation-for="Pizza.Prezzo" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <label>Categoria:</label>
            <select asp-for="Pizza.CategoriaId" rows="10" class="d-block w-100">
                <option value=""></option>
                @foreach (Categoria categoria in Model.Categorie)
                {
                    <option value="@categoria.Id">@categoria.Nome</option>
                }
            </select>
            <span asp-validation-for="Pizza.CategoriaId" class="text-danger"></span>
        </div>

        <div class="d-grid justify-content-end">
            <button type="submit" class="btn btn-primary" formmethod="post">Crea</button>
        </div>

    </form>

</div>
